generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  SuperAdmin
  Admin
  Manager
  User
}

enum RoomStatus {
  available
  requested
  booked
}

enum BookingStatus {
  pending
  approved
  rejected
}

enum PaymentStatus {
  pending
  paid
  failed
}

enum BookingState {
  active
  completed
  canceled
}

enum TodoStatus {
  pending
  completed
}

enum RoomType {
  Single
  Double
  Deluxe
  Other
}

model User {
  id        String   @id      @default(uuid())
  name      String   @db.VarChar(100)
  email     String   @unique
  password  String
  role      Role     @default(User)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  lastSeen  DateTime @default(now())


  bookings        Booking[]
  bookingRequests BookingRequest[]
  payments        Payment[]
  comments        Comment[]
  Todo            Todo[]
  Rating          Rating[]
  Saved           Saved[]
  Notification    Notification[]
}

model Room {
  id        String   @id      @default(uuid())
  name       String  @db.VarChar(100)
  discrption String
  price      Decimal

  view  String @default("Sea")
  size  String @default("20*30")
  guest String @default("2")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  images          RoomImage[] // Ø§Ù„Ø¹Ù„Ø§Ù‚Ø© Ù…Ø¹ Ø§Ù„ØµÙˆØ±
  status          RoomStatus       @default(available)
  roomType        RoomType         @default(Single)
  bookingRequests BookingRequest[]
  bookings        Booking[]
  comments        Comment[]
  Rating          Rating[]
  Saved           Saved[]
}

model RoomImage {
  id        String   @id      @default(uuid())
  roomId    String
  imageUrl  String   @db.Text // ØªØ®Ø²ÙŠÙ† Ø±Ø§Ø¨Ø· Ø§Ù„ØµÙˆØ±Ø©
  createdAt DateTime @default(now())

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
}

model BookingRequest {
  id        String   @id      @default(uuid())
  userId    String
  roomId    String
  checkIn   DateTime
  checkOut  DateTime
  status    BookingStatus @default(pending)
  createdAt DateTime      @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
}

model Booking {
  id        String   @id      @default(uuid())
  userId          String
  roomId          String
  checkIn         DateTime
  checkOut        DateTime
  status          BookingState  @default(active)
  paymentStatus   PaymentStatus @default(pending)
  totalAmount     Decimal // Ø§Ù„Ø³Ø¹Ø± Ø§Ù„ÙƒØ§Ù…Ù„ Ù„Ù„ØºØ±ÙØ©
  paidAmount      Decimal       @default(0) // Ø§Ù„Ù…Ø¨Ù„Øº Ø§Ù„Ù…Ø¯ÙÙˆØ¹
  remainingAmount Decimal       @default(0) // Ø§Ù„Ù…Ø¨Ù„Øº Ø§Ù„Ù…ØªØ¨Ù‚ÙŠ
  createdAt       DateTime      @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  room    Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  payment Payment?
}

model Payment {
  id        String   @id      @default(uuid())
  userId    String
  bookingId String     @unique
  amount    Decimal

  method    String        @db.VarChar(50)
  status    PaymentStatus @default(pending)
  createdAt DateTime      @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)
}

model Rating {
  id        String   @id      @default(uuid())
  ratingValue Int // Ø§Ù„ØªÙ‚ÙŠÙŠÙ… Ù…Ù† 1 Ø¥Ù„Ù‰ 5
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  roomId      String
  userId      String
  room        Room     @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([roomId, userId]) // ğŸ”¥ Ù‡Ø°Ø§ Ø£Ù‡Ù… Ø´ÙŠØ¡ Ø­ØªÙ‰ ØªÙ…Ù†Ø¹ Ø§Ù„ØªÙƒØ±Ø§Ø±
}

model Comment {
  id        String   @id      @default(uuid())
  text      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  roomId    String
  userId    String

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Setting {
  id        String   @id      @default(uuid())
  key       String   @unique
  value     String
  updatedAt DateTime @updatedAt
}

model Todo {
  id        String   @id      @default(uuid())
  title      String
  discrption String
  status     TodoStatus @default(pending)
  userId     String
  createdAt  DateTime   @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Saved {
  id        String   @id      @default(uuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  roomId    String
  userId    String

  room Room @relation(fields: [roomId], references: [id], onDelete: Cascade)
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Notification {
  id        String   @id      @default(uuid())
  message   String
  type      String
  userId    String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  link      String 
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
